# SmartLedger Environment Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here_optional

# Modal Configuration
MODAL_TOKEN=your_modal_token_here
MODAL_ENVIRONMENT=main

# Optional: Hugging Face for open-source models
HUGGINGFACE_TOKEN=your_hf_token_here_optional

# Application Configuration
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Gradio Configuration
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false

# Processing Configuration
MAX_FILE_SIZE_MB=10
MAX_BATCH_SIZE=20
PROCESSING_TIMEOUT_SECONDS=300

# Reconciliation Settings
AMOUNT_TOLERANCE=2.0
DATE_TOLERANCE_DAYS=5
VENDOR_SIMILARITY_THRESHOLD=0.7
CATEGORY_CONFIDENCE_THRESHOLD=0.6

# Optional: Database Configuration (for future use)
# DATABASE_URL=sqlite:///smartledger.db
# REDIS_URL=redis://localhost:6379/0

# Security (for production)
# SECRET_KEY=your_secret_key_here
# ALLOWED_HOSTS=localhost,127.0.0.1